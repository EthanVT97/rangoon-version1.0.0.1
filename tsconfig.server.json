{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/server",          // build output ကို dist/server ထဲထုတ်မယ်
    "rootDir": "./server",              // server/ folder ကနေ source root သတ်မှတ်
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true                // type conflict skip
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client"]
}
